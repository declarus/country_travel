<script type="text/javascript">
  function toggleJSON_demo() {
    if (document.getElementById('JSON_demo').style.display == 'none' || document.getElementById('JSON_demo').style.display == '') {
      document.getElementById('JSON_demo').style.display='block';
    } else {
      document.getElementById('JSON_demo').style.display='none';
    }
  }
  $.ajax({
    type: "GET",
    url: "/countries.json",
    dataType: "html",
    success: function(data) {
      var obj = jQuery.parseJSON(data);
      $.each(obj, function(i) {
        $(".tester").append("<p>" + this.id + ". "+ this.name + "</p>");
      });
      var strLines = obj.split("},");
      for (var i in strLines) {
        var country = JSON.parse(strLines[i]);
        $(".tester").append("country: "+ country + "/end")
      }
    }
  });

</script>
